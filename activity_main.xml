<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            tools:context=".MainActivity">

            <Button
                android:id="@+id/btnGerar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gerar Time"
                android:layout_marginBottom="5dp"></Button>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/champ1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Campeão 1: "
                    android:textSize="20dp"/>
                <ImageView
                    android:id="@+id/imgChamp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/champ2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Campeão 2: "
                    android:textSize="20dp"/>
                <ImageView
                    android:id="@+id/imgChamp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/champ3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Campeão 3: "
                    android:textSize="20dp"/>
                <ImageView
                    android:id="@+id/imgChamp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/champ4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Campeão 4: "
                    android:textSize="20dp"/>
                <ImageView
                    android:id="@+id/imgChamp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/champ5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Campeão 5: "
                    android:textSize="20dp"/>
                <ImageView
                    android:id="@+id/imgChamp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></ImageView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>